<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/style-register.css">
</head>


<body>
    <%- include('../partials/header') %>

    <main class="fondoImagen">
        <div class="formulario">
            <form action="/users/registro" method="POST">

                <h2>Crea tu cuenta</h2>
                <div class="name-and-surname">
                    <div class="item-input">
                        <div class="input-user">
                            <label for="nombre">Nombre* </label>
                        </div>
                        <input class="controls" type="text" name="name" id="nombre" required>
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="apellido">Apellido* </label>
                        </div>
                        <input class="controls" type="text" name="lastName" id="apellido" required>
                    </div>
                </div>
                <div class="users">

                    <div class="item-input">
                        <div class="input-user">
                            <label for="user">Usuario* </label>
                        </div>
                        <input class="controls" type="user" name="username" id="user" required>
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="user">Email* </label>
                        </div>
                        <input class="controls" type="user" name="email" id="user" required>
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="password">Contraseña* </label>
                        </div>
                        <input class="controls" type="password" name="password" id="password" required>
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="repeat-password">Repetir Contraseña* </label>
                        </div>
                        <input class="controls" type="password" name="password" id="password" required>
                    </div>
                </div>

                <div class="register-button">
                    <button type="submit">Registrarse</button>
                </div>
            </form>
        </div>




    </main>



    <%- include('../partials/footer') %>

    <include src="/part-header.html"></include>


</body>

</html>
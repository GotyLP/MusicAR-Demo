<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/style-register.css">
    <link rel="stylesheet" href="/css/style-invalid-Input.css"
</head>


<body>
    <%- include('../partials/header') %>

    <main class="fondoImagen">
        <div class="errors">
             
        </div>
        
        <div class="formulario">
            <form class="form" action="/users/register" method="POST" enctype="multipart/form-data">

                <h2>Crea tu cuenta</h2>
                <div class="name-and-surname">
                    <div class="item-input">
                        <div class="input-user">
                            <label for="name">Nombre* </label>
                        </div>
                        <input type="text" name="name" id="name"
                        class="controls"
                          value = "<%= locals.oldData ? oldData.name : null %>">
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="lastName">Apellido* </label>
                        </div>
                        <input type="text" name="lastName" id="lastName"
                         class="controls"  
                         value = "<%= locals.oldData ? oldData.lastName : null %>">
                         
                    </div>
                </div>
                <div class="users">

                    <div class="item-input">
                        <div class="input-user">
                            <label for="email">Email* </label>
                        </div>
                        <input type="email" name="email" id="email"
                        class="controls"  
                        value = "<%= locals.oldData ? oldData.email : null %>">
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="password">Contraseña* </label>
                        </div>
                        <input type="password" name="password" id="password"
                        class="controls"  
                        value = "<%= locals.oldData ? oldData.password : null %>">
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="passwordConfirm">Repetir Contraseña* </label>
                        </div>
                        <input type="password" name="passwordConfirm" id="passwordConfirm"
                         class="controls">
                         
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="country_id">Elegí tu país* </label>
                        </div>
                        <select name="country_id" class="select-city">
                            <% countries.forEach(country => { %>
                             <option value="<%= country.id%>"> <%=country.countryName%></option>   
                           <% }) %> 
                           
                        </select>
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="city_id">Elegí tu ciudad* </label>
                        </div>
                        <select name="city_id" class="select-city">
                            <% citys.forEach(city => { %>
                             <option value="<%= city.id%>"> <%=city.cityName%></option>   
                           <% }) %> 
                           
                        </select>
                    </div>

                    
                    <div class="item-input">
                        <div class="input-user">
                            <label for="imageUser">Eligí tu foto de perfil*</label>
                        </div>
                            <input class="controls"  type="file" name="imageUser" id="imageUser"
                            value = "<%= locals.oldData ? oldData.imageUser : null %>"
                            >
                           
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="category_id">Elegí tu categoria preferida*</label>
                        </div>
                        <div class="selects">
                        <select name="category_id" class="select-category">
                            <% categories.forEach(category => { %>
                             <option value="<%= category.id%>"> <%=category.name%></option>   
                           <% }) %> 
                        </select>
                    </div>

                </div>
                        
                <div class="register-button">
                    <button type="submit">Registrarse</button>
                </div>
            </form>
        </div>


        <script src="../../../js/registerValidation.js"></script>

    </main>



    <%- include('../partials/footer') %>



</body>

</html>
<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/style-register.css">
</head>


<body>
    <%- include('../partials/header') %>

    <main class="fondoImagen">
        <div class="errors">
             <% if (locals.errors) { %>
        <% for (let oneError in errors) { %>
            <p> <%= errors[oneError].msg %> </p>
            <% } %>  
        <% } %> 
        </div>
        
        <div class="formulario">
            <form action="/users/register" method="POST" enctype="multipart/form-data">

                <h2>Crea tu cuenta</h2>
                <div class="name-and-surname">
                    <div class="item-input">
                        <div class="input-user">
                            <label for="name">Nombre* </label>
                        </div>
                        <input class="controls" type="text" name="name" id="name">
                        <% if (locals.errors && errors.name) {%>
                            <div class="error-text">
                                <%= errors.name.msg %> 
                            </div>
                            <% } %>  
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="lastName">Apellido* </label>
                        </div>
                        <input class="controls" type="text" name="lastName" id="lastName">
                    </div>
                </div>
                <div class="users">

                    <div class="item-input">
                        <div class="input-user">
                            <label for="user">Usuario* </label>
                        </div>
                        <input class="controls" type="user" name="username" id="user">
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="user">Email* </label>
                        </div>
                        <input class="controls" type="user" name="email" id="user">
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="password">Contraseña* </label>
                        </div>
                        <input class="controls" type="password" name="password" id="password">
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="repeat-password">Repetir Contraseña* </label>
                        </div>
                        <input class="controls" type="password" name="passwordConfirm" id="password">
                    </div>

                    <div class="item-input">
                        <div class="input-user">
                            <label for="imageUser">Elija su foto de perfil*</label>
                        </div>
                            <input class="controls" type="file" name="imageUser" id="imageUser">
                        
                    </div>
                </div>

                <div class="register-button">
                    <button type="submit">Registrarse</button>
                </div>
            </form>
        </div>




    </main>



    <%- include('../partials/footer') %>

    <include src="/part-header.html"></include>


</body>

</html>
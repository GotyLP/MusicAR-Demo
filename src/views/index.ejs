                                                <% if (event.teater_id === teaters[i].id) {%>
                                                    <%= teaters[i].name%>
                                                    <% }} %>,
                                            <% for( let i = 0; i < citys.length; i++) {%>
                                                <% if (event.city_id === citys[i].id) {%> 
                                                    <%= citys[i].cityName %>.
                                                    <% }} %>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="article-buttons">
                                <div class="btn color-b icon"> <i class="fa fa-cart-plus" aria-hidden="true"></i></div>
                                <a href="" class="btn color-a buy">Comprar ahora</a>
                            </div>
                        </article>

                        <% }) %>    
                </div>
        </section>
        <% } %> 
        <br>
        <br>


        <%- include('./partials/footer') %>
<script src="../../js/searchIndex.js"></script>
</body>

</html>